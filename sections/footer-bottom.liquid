{% assign padding 	= section.settings.padding | split: "|" %}
{% assign bg 		= section.settings.bg_color %}
{%- style -%}
	{%- if padding[0] != blank -%}
		.footer-bottom{
			padding:{{ padding[0] }};
			background:{{bg}};
		}
	{%- endif -%}
	{%- if section.blocks.size > 0 -%}
		{%- for block in section.blocks -%}
			{%- case block.type -%}
				{%- when 'menu' -%}
					.footer-bottom .footer-index-{{forloop.index}}{
						color:{{ block.settings.color }};
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
					.footer-bottom .footer-index-{{forloop.index}} a{
						color:{{ block.settings.color }};
					}
					.footer-bottom .footer-index-{{forloop.index}} a:hover{
						color:{{ block.settings.color_hover }};
					}
				{%- when 'copyright' -%}
					.footer-bottom .footer-index-{{forloop.index}}{
						color:{{ block.settings.color }};
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
				{%- when 'paymet' -%}
					.footer-bottom .footer-index-{{forloop.index}}{
						margin:{{ block.settings.margin }};
						max-width:{{ block.settings.footer_width }}%;
						flex:0 0 {{ block.settings.footer_width }}%;
					}
			{%- endcase -%}
		{%- endfor -%}
		{%- if padding[1] != blank -%}
			@media (max-width:1199px){
				.footer-bottom{
					padding:{{ padding[1] }};
				}
			}
		{%- endif -%}
		@media (max-width:991px){
			{%- if padding[2] != blank -%}
				.footer-bottom{
					padding:{{ padding[2] }};
				}
			{%- endif -%}
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'menu' -%}
						.footer-bottom .footer-index-{{forloop.index}}{
							max-width:{{ block.settings.footer_width_ipad }}%;
							flex:0 0 {{ block.settings.footer_width_ipad }}%;
						}
					{%- when 'copyright' -%}
						.footer-bottom .footer-index-{{forloop.index}}{
							max-width:{{ block.settings.footer_width_ipad }}%;
							flex:0 0 {{ block.settings.footer_width_ipad }}%;
						}
					{%- when 'paymet' -%}
						.footer-bottom .footer-index-{{forloop.index}}{
							max-width:{{ block.settings.footer_width_ipad }}%;
							flex:0 0 {{ block.settings.footer_width_ipad }}%;
						}
				{%- endcase -%}
			{%- endfor -%}
		}
		@media (max-width:767px){
			{%- if padding[3] != blank -%}
				.footer-bottom{
					padding:{{ padding[3] }};
				}
			{%- endif -%}
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'menu' -%}
						.footer-bottom .footer-index-{{forloop.index}}{
							max-width:{{ block.settings.footer_width_mobi }}%;
							flex:0 0 {{ block.settings.footer_width_mobi }}%;
						}
					{%- when 'copyright' -%}
						.footer-bottom .footer-index-{{forloop.index}}{
							max-width:{{ block.settings.footer_width_mobi }}%;
							flex:0 0 {{ block.settings.footer_width_mobi }}%;
						}
					{%- when 'paymet' -%}
						.footer-bottom .footer-index-{{forloop.index}}{
							max-width:{{ block.settings.footer_width_mobi }}%;
							flex:0 0 {{ block.settings.footer_width_mobi }}%;
						}
						
				{%- endcase -%}
			{%- endfor -%}
		}
	{%- endif -%}
{%- endstyle -%}
<div class="footer-bottom">
	<div class="container">
		<div class="footer-bottom__inner row">
		{%- if section.blocks.size > 0 -%}
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'menu' -%}
						<div class="footer-index-{{forloop.index}} footer-menu aligin-{{ block.settings.align }} align_tablet-{{ block.settings.align_tablet }} aligin_mobi-{{ block.settings.align_mobi }}">
							{%- assign footer_menu = block.settings.footer_link_list -%}
							{% include 'footer-menu' %}
						</div>
					{%- when 'copyright' -%}
						{%- if block.settings.show_copyright -%}
							 <div class="footer-index-{{forloop.index}} footer-copyright aligin-{{ block.settings.align }} align_tablet-{{ block.settings.align_tablet }} aligin_mobi-{{ block.settings.align_mobi }}">{{ block.settings.copyright }}</div>
						{%- else -%}
							<div class="footer-index-{{forloop.index}} footer-copyright aligin-{{ block.settings.align }} align_tablet-{{ block.settings.align_tablet }} aligin_mobi-{{ block.settings.align_mobi }}">&copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: routes.root_url }}. {{ powered_by_link }}</div>
						{%- endif -%}
					{%- when 'paymet' -%}
						{%- assign payment_image = block.settings.payment_image -%}
						<div class="footer-index-{{forloop.index}} payment-image aligin-{{ block.settings.align }} align_tablet-{{ block.settings.align_tablet }} aligin_mobi-{{ block.settings.align_mobi }}">
							{%- if payment_image -%}
								<img class="payment-image__img img-fluid" src="{{ payment_image | img_url: 'master' }}" alt="{{ payment_image.alt | escape }}"/>
							{%- else -%}
								<img src="https://placehold.jp/309x32.png" />
							{%- endif -%}
						</div>
				{%- endcase -%}
			{%- endfor -%}
		{%- endif -%}
		</div>
	</div>
</div>
