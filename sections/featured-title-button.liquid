<section class="kretoss-section kretoss-section--title-button kretoss-section--{{ section.id }} overflow-hidden">
	<div class="{{ container }}" {{ max_width }}>
		<div class="kretoss-section__inner">
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'title' -%}
						{%- unless block.settings.title == blank -%}
							<h2 class="kretoss-title heading-{{forloop.index}}">
								{{ block.settings.title }}
							</h2>
						{%- endunless -%}
					{%- when 'sub_title' -%}
						{%- unless block.settings.title == blank -%}
							<div class="kretoss-sub-title subheading-{{forloop.index}}">
								{{ block.settings.title }}
							</div>
						{%- endunless -%}
					{%- when 'descrioption' -%}
						{%- unless block.settings.title == blank -%}
							<div class="wpbing-descrioption  descrioption-{{forloop.index}}" >
								{{ block.settings.title }}
							</div>
						{%- endunless -%}
					{%- when 'button' -%}
						{%- unless block.settings.title == blank -%}
							<div class="kretoss-button  button-{{forloop.index}}" >
								<a href="{{ block.settings.url }}">{{ block.settings.title }}</a>
							</div>
						{%- endunless -%}
				{%- endcase -%}
			{%- endfor -%}
		</div>
	</div>
</section>

