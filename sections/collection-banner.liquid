{%- if section.settings.show -%}
	{%- style -%}
		{%- if section.blocks.size > 0 -%}
			{% for block in section.blocks %}
				{% assign padding 		= block.settings.padding | split: "|" %}
				.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .title-banner{
					color: {{ block.settings.color_title }};
				}
				.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .bwp-image-description{
					color: {{ block.settings.color_description }};
				}
				.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .bwp-button{
					color: {{ block.settings.color_button }};
					background: {{ block.settings.bg_button }};
				}
				.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .banner-wrapper-infor{
					justify-content: {{ block.settings.horizontal_position }};text-align: {{ block.settings.text_align }};align-items: {{ block.settings.vertical_position }};padding:{{ padding[0] }};
				}
				.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .bwp-image img{
					min-height:{{ block.settings.height_image }};object-fit: {{ block.settings.size_image }};object-position:{{ block.settings.position_image }};
				}
				{%- if padding[1] != blank -%}
					@media (max-width:1200px){
						.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .banner-wrapper-infor{
							padding:{{ padding[1] }};
						}
					}
				{%- endif -%}
				{%- if padding[2] != blank -%}
					@media (max-width:991px){
						.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .banner-wrapper-infor{
							padding:{{ padding[2] }};
						}
					}
				{%- endif -%}
				{%- if padding[3] != blank -%}
					@media (max-width:767px){
						.bwp-widget-collection_banner .featured-banner.banner-{{ forloop.index }} .banner-wrapper-infor{
							padding:{{ padding[3] }};
						}
					}
				{%- endif -%}
			{% endfor %}
		{%- endif -%}
	{%- endstyle -%}
	<section class="kretoss-section bwp-widget-collection_banner kretoss-section--{{ section.id }} overflow-hidden">
		<div class="container">
			<div class="kretoss-section__inner">
				<div class="kretoss-section__content">
					{%- for block in section.blocks -%}
						{%- assign image 		= block.settings.image -%}
						{%- assign title 		= block.settings.title -%}
						{%- assign url 			= block.settings.url -%}
						{%- assign description 	= block.settings.description -%}
						{%- assign button 		= block.settings.button -%}
						{%- assign effect 		= block.settings.effect -%}
						<div class="featured-banner {{ effect }} banner-{{ forloop.index }}">
							<div class="bwp-image">
								{%- if image -%}
									{% include 'img-global' with image: image, class: "featured-banner__img", effect: "fade-in" %}
								{%- else -%}
									<img class="lazyload fade-in" src="https://placehold.jp/690x276.png" alt="{{ collection_image.alt | escape }}">
								{%- endif -%}
							</div>
							<a href="{{ url }}" class="banner-wrapper-infor">
								<div class="info">
									<div class="content">
										{%- if description != blank -%}
											<div class="bwp-image-description">{{ description }}</div>
										{%- endif -%}
										{%- if title != blank -%}
											<h3 class="title-banner">{{ title }}</h3>
										{%- endif -%}
										{%- if button != blank -%}
											<div class="bwp-button">{{ button }}</div>
										{%- endif -%}
									</div>
								</div>
							</a>
						</div>
					{%- endfor -%}
				</div>
			</div>
		</div>
	</section>
{%- endif -%}
