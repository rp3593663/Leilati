			},
			{
				"type": "text",
				"id": "megamenu_name",
				"label": "Megamenu item name"
			},
			{
				"type": "select",
				"id": "width",
				"options": [
					{
						"value": "custom",
						"label": "Custom"
					},
					{
						"value": "full",
						"label": "Full Width"
					}
				],
				"label": "Width Submenu:",
				"default":"full"
			},
			{
				"type": "text",
				"id": "width_custom",
				"label": "== Custom Width"
			},
			{
