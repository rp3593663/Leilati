{%- style -%}
	{%- assign padding = section.settings.padding -%}
	{%- assign logo_max_width = section.settings.logo_max_width -%}
	{% if padding != blank %}.bwp-header {padding: {{ padding }};}{% endif %}
	.header-logo img {max-width: {{ logo_max_width | append: 'px' }};}
	{% if section.settings.header_absolute %}
		@media (min-width:991px){
			body.template-index .bwp-header{position:absolute;width:100%;z-index: 2;}
			{% if section.settings.color_homepage_text %}
				body.template-index .bwp-header .header-desktop .main-menu__nav-item>a{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-desktop .search-toggle{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-desktop .login-account{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-desktop .header-account__title{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-desktop  .header-cart__link{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-desktop  .wishlist{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-top{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .header-top a{
					color:{{ section.settings.color_homepage_text }}
				}
				body.template-index .bwp-header .main-menu__nav-item>a:before{
					background:{{ section.settings.color_homepage_text }}
				}
			{% endif %}
		}
	{% endif %}
{%- endstyle -%}

<div data-section-id="{{ section.id }}" data-section-type="header-section" class="bwp-header header_1" data-sticky_header="{{ section.settings.header_sticky }}">
	{%- if section.settings.header_sticky != blank -%}
		{% include 'header-sticky' %}
	{%- endif -%}
	<div class="header-desktop">
		<h1 class="d-none" itemprop="legalName">{{ shop.name }}</h1>
		<div class="container">
			<div class="header-center__inner">
				<div class="header-logo" itemscope itemtype="http://schema.org/Organization">
					{%- if section.settings.logo -%}
						<a href="/" itemprop="url" class="header-logo__link">
							{%- if section.settings.logo_homepage and template.name == "index" -%}
								<img class="header-logo__img"
									src="{{ section.settings.logo_homepage | img_url: 'master' }}" 
									srcset="{{ section.settings.logo_homepage | img_url: 'master' }}"
									alt="{{ section.settings.logo_homepage.alt | default: shop.name }}"
									itemprop="logo">
							{%- else -%}
								<img class="header-logo__img"
									src="{{ section.settings.logo | img_url: 'master' }}" 
									srcset="{{ section.settings.logo | img_url: 'master' }}"
									alt="{{ section.settings.logo.alt | default: shop.name }}"
									itemprop="logo">
							{%- endif -%}
						</a>
					{%- else -%}
						<a href="/" itemprop="url" class="header-logo__link header-logo__link--text">{{ shop.name }}</a>
					{%- endif -%}
				</div>
				<div class="header-left">
					{% include 'header-menu' %}
				</div>
				<div class="header-right">
					<div class="header-page-link">
						{%- if section.settings.show_header_search -%}
							<div class="search-toggle">
								<svg width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M24.5002 24.5002L19.4334 19.4334M19.4334 19.4334C20.3001 18.5667 20.9876 17.5378 21.4567 16.4054C21.9257 15.273 22.1672 14.0593 22.1672 12.8336C22.1672 11.6079 21.9257 10.3942 21.4567 9.26177C20.9876 8.12937 20.3001 7.10044 19.4334 6.23374C18.5667 5.36704 17.5378 4.67953 16.4054 4.21048C15.273 3.74142 14.0593 3.5 12.8336 3.5C11.6079 3.5 10.3942 3.74142 9.26177 4.21048C8.12937 4.67953 7.10044 5.36704 6.23374 6.23374C4.48336 7.98413 3.5 10.3582 3.5 12.8336C3.5 15.309 4.48336 17.683 6.23374 19.4334C7.98413 21.1838 10.3582 22.1672 12.8336 22.1672C15.309 22.1672 17.683 21.1838 19.4334 19.4334Z" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
								</svg>
								{% comment %} <i class="feather-search"></i> {% endcomment %}
							</div>
							{% include 'header-search-toggle' %}
						{%- endif -%}
						{%- if section.settings.show_header_user -%}
							{% include 'header-account' %}
						{%- endif -%}
						{%- if section.settings.show_header_wishlist -%}
							<a class="wishlist" href="/pages/wishlist" data-count-wishlist><span class="text-header-right">{{ section.settings.header_wishlist_title | escape }}</span><span class="count"></span></a>
						{%- endif -%}
						{%- if section.settings.show_header_cart -%}
							{% include 'header-cart' %}
						{%- endif -%}
					</div>
				</div>
			</div>
		</div>
	</div>
	{% include 'header-mobile' %}
</div>

