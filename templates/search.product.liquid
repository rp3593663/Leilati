{% layout none %}
{%- paginate search.results by 12 -%}
  {%- if search.performed -%}
    {%- if search.results_count != 0 -%}
      <div class="search-results__items">
        <h2 class="search-results__heading kretoss-title__heading">{{ 'general.search.product_title' | t }} <span>({{ search.results_count }})</span></h2>
        <div class="search-results__grid row">
          {% for item in search.results %}
            <div class="search-results__item col-6 col-lg-3">
              {% assign product = item %}
              {% include 'product-grid-item' %}
            </div>
          {% endfor %}
        </div>
      </div>
    {%- endif -%}

    {%- if paginate.pages > 1 -%}
      <div class="search-pagination">
        {% include 'pagination' %}
      </div>
    {%- endif -%}
  {%- endif -%}

{%- endpaginate -%}