 <details-modal class="header__search">
	<div class="search-modal">
		<div class="modal-overlay"></div>
		<div class="search-modal__content" tabindex="-1">
			<predictive-search class="search-modal__form">
				<form action="{{ routes.search_url }}" method="get" role="search" class="search search-modal__form">
					<div class="field">
						<input type="hidden" name="type" value="product" />
						<input type="hidden" name="options[prefix]" value="last" />
						<input class="search__input field__input" name="q" value="" placeholder="Search categories or products..."
							aria-haspopup="listbox" aria-autocomplete="list" autocomplete="off" autocapitalize="off" spellcheck="false">
						<div class="select_category">
							<h4 class="select_category__title">All Category</h4>
							{%- include 'collection-categories-2' -%}
						</div>
						<button class="search__button field__button" aria-label="{{ 'general.search.submit' | t }}">{{ 'general.search.submit' | t }}<i class="icon-search"></i></button>
					</div>
					<div class="predictive-search-content">
						<div class="predictive-search-content-product{% unless settings.show_search_blog %} full{% endunless %}" tabindex="-1" data-predictive-search>
							<div class="predictive-search__loading-state"></div>
						</div>
					</div>	
					<span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
				</form>
			</predictive-search>
		</div>
	</div>
</details-modal>
